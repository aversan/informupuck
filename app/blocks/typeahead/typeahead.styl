.tt-query
	box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)

.tt-hint
	color #999

.tt-menu
	width 422px
	margin 12px 0
	padding 8px 0
	background-color #fff
	border-radius 0
	box-shadow 0 5px 28px alpha(#000, .2)

	.input-group-search &
		width 100%
		margin 8px 0
		padding 0

.tt-suggestion
	padding 3px 20px
	font-size 18px
	line-height 24px

	&:hover
		cursor pointer
		color #fff
		background-color $background-color-base-hover

	&.tt-cursor
		color #fff
		background-color $background-color-base-hover

	& p
		margin 0

	.input-group-search &
		font-size 11px
		line-height 1.2
		padding-left 41px
		padding-right 16px
		padding-top 13px
		padding-bottom 13px
		box-sizing border-box
		position relative

		&:before
			content '\F349'
			font-family 'Material Design Icons'
			font-size 24px
			display block
			width 40px
			height 40px
			line-height 40px
			text-align center
			position absolute
			left 0
			top 0
			color $brand-primary

		&:hover:before
			color #fff

.twitter-typeahead
	.input-group &
		display table-cell !important
