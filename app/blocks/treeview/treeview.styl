.treeview
	padding 0
	clear both
	width 100%

	*
		font-size 100.1%

	ul
		overflow hidden
		width 100%
		margin 0
		padding 0 0 1.5em 0
		list-style-type none

		ul
			overflow visible
			width auto
			margin 0 0 0 0
			padding 0 0 0 0.75em

		&.l
			border-left 1px solid
			margin-left -1px
	li
		margin 0
		padding 0

		&.cl
			ul
				display none

		li
			margin 0 0 0 0.5em
			border-left 1px dotted
			padding 0

			div
				border-bottom 1px dotted

		div
			position relative
			height 1.5em
			min-height 16px
			//height 1.3em

		p
			position absolute
			z-index 1
			top 0.8em
			//top 0.65em
			left 1.75em
			width 100%
			margin 0
			border-bottom 1px dashed
			padding 0

	a
		padding 0.1em 0.2em
		white-space nowrap
		//height 1px

		&.sc
			position absolute
			top 0.06em
			margin-left -1em
			padding 0
			text-decoration none

	img
		&.i
			border-right 2px solid
			border-bottom 0.5em solid
			margin-bottom -0.5em
			vertical-align middle

// colors
.treeview li p
.treeview img.i
.treeview .sc
	background #fff

.treeview ul.l
.treeview li p
.treeview img.i
	border-color #fff

.treeview ul li li
.treeview ul li li div
	border-color #dcdcdc

.treeview a
.treeview a.sc
.treeview a.sc:hover
	color #999

.treeview
	a:hover
		color #cc0000

.treeview
	input[type=checkbox]
		position absolute
		clip rect(0, 0, 0, 0)

	label[class*='custom-']
		display inline-block
		margin-left 1.65em
		font-weight normal

	input ~ label:before
		font-family 'Material Design Icons'
		font-size 1.4em
		display block
		position absolute
		left 0
		top -1px

	input ~ label:before
	input ~ label:hover:before
		color $brand-primary
		content '\F12E'
		opacity .6

	input:checked ~ label:before
	input:checked ~ label:hover:before
		content '\F132'
		opacity 1

	input:indeterminate ~ label:before
	input:indeterminate ~ label:hover:before
		content '\F375'
		opacity 1

	input:disabled ~ label:before
	input:disabled ~ label:hover:before
		opacity .6
		color #999

	input:disabled ~ label
		color #999

.treeview--view2
	ul
		padding-bottom 0

		ul
			overflow hidden
			padding-left 0.75em

		&.l
			border-left none
			margin-left 0
	li
		li
			margin-left .5em
			border-left none

			div
				border-bottom none

		div
			position static
			height auto

		p
			position relative
			top auto
			left auto
			border-bottom none
			margin-bottom 8px
