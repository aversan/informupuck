// Buttons

$btn-padding-x = 20px
$btn-padding-y = 10px
$btn-box-shadow = none
$btn-active-box-shadow = inset 0 3px 5px alpha(#000, .125)

$btn-primary-color = #fff
$btn-primary-bg = $brand-primary
$btn-primary-bg-hover = lighten($btn-primary-bg, 10%)
$btn-primary-bg-active = darken($btn-primary-bg, 10%)
$btn-primary-border = $btn-primary-bg
$btn-primary-border-hover = lighten($btn-primary-border, 10%)
$btn-primary-border-active = darken($btn-primary-border, 10%)

$btn-secondary-color = #333
$btn-secondary-bg = #f2f2f2
$btn-secondary-bg-hover = lighten($btn-secondary-bg, 10%)
$btn-secondary-bg-active = darken($btn-secondary-bg, 10%)
$btn-secondary-border = #d5d5d5
$btn-secondary-border-hover = lighten($btn-secondary-border, 10%)
$btn-secondary-border-active = darken($btn-secondary-border, 10%)

$btn-disabled-color = #adadad
$btn-disabled-bg = #f9fafb
$btn-disabled-border = #f9fafb

$btn-link-color = #4d739f
$btn-link-disabled-color = #adadad

$btn-padding-x-sm = .75rem
$btn-padding-y-sm = .25rem

$btn-padding-x-lg = 1.25rem
$btn-padding-y-lg = .75rem

$btn-border-radius = 0
$btn-border-radius-lg = 0
$btn-border-radius-sm = 0


$background-image-pattern = url('data:image/png;base64,')

$font-size-md = 13px
$line-height-md = 1.2

$font-size-sm = 12px
$line-height-sm = 1.2

$font-size-lg = 13px
$line-height-lg = 1.2

// Forms

$input-padding-x = 10px
$input-padding-y = 10px

$input-bg = #fff
$input-bg-disabled = #f9fafb

$input-color = #333
$input-border-color = #a4b7cd
$input-btn-border-width = 1px
$input-box-shadow = none

$input-border-radius = 0
$input-border-radius-md = 0
$input-border-radius-lg = 0
$input-border-radius-sm = 0

$input-border-focus = #a4b7cd
$input-box-shadow-focus = inset 0 1px 1px alpha($input-border-color, 0.75), 0 0 8px alpha($input-border-focus, 0.6)

$input-color-placeholder = #414a5a

$input-padding-x-md = 10px
$input-padding-y-md = 10px

$input-padding-x-sm = 10px
$input-padding-y-sm = 3px

$input-padding-x-lg = 20px
$input-padding-y-lg = 10px

$input-height = $font-size-md * $line-height-md + $input-padding-y * 2
$input-height-md = $font-size-md * $line-height-md + $input-padding-y * 2
$input-height-lg = $font-size-lg * $line-height-lg + $input-padding-y-lg * 2
$input-height-sm = $font-size-sm * $line-height-sm + $input-padding-y-sm * 2

$form-group-margin-bottom = 20px

$input-group-addon-bg = #fff
$input-group-addon-border-color = $input-border-color

$cursor-disabled = not-allowed


// Icon toggles

$icon-toggle-size = 32px
$icon-toggle-font-size = 20px
$icon-toggle-ripple-size = 36px

$icon-toggle-color = grey
$icon-toggle-focus-color = grey
$icon-toggle-checked-color = $brand-primary
$icon-toggle-checked-focus-color = alpha($brand-primary, .26)
$icon-toggle-disabled-color = alpha(#000, .26)


// Chip
$chip-bg-color = #fffff3
$chip-bg-active-color = #fffff3
$chip-height = 25px
$chip-font-size = 11px
$chip-border-color = #d9d9d5
$chip-border-radius = 7px

// Animations

$animation-curve-fast-out-slow-in = cubic-bezier(0.4, 0, 0.2, 1)
$animation-curve-linear-out-slow-in = cubic-bezier(0, 0, 0.2, 1)
$animation-curve-fast-out-linear-in = cubic-bezier(0.4, 0, 1, 1)
$animation-curve-default = $animation-curve-fast-out-slow-in
