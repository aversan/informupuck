.section
	&__header
		display block
		position relative
		z-index 1

		&--space
			padding 10px 15px 10px 20px

			.section__header-tabs
				margin 10px -15px -10px -20px

		&--panel-space
			padding 14px 24px
			margin-bottom 0 !important

			& > *:first-child
				margin-top 0 !important

			& > *:last-child
				margin-bottom 0 !important

		&--pattern
			background-image $background-image-pattern
			background-repeat repeat

		&-row
			display flex
			box-sizing border-box
			flex-direction row
			flex-wrap nowrap
			align-items center
			overflow hidden

		&-row + &-row
			margin-top 10px

		&-primary-content
			order 0
			flex-grow 2
			box-sizing border-box
			display flex
			align-items center

		&-secondary-content
			display flex
			align-items center
			justify-content flex-end
			margin-left 15px

		&-secondary-action
		&-secondary-action-title
			font-size 12px
			display inline-block
			vertical-align middle
			margin-top 4px
			margin-bottom 4px

		&-secondary-action
			text-decoration none

			&--prev
				color #333
				opacity .6
				white-space nowrap

				&:hover
				&:focus
					opacity 1

					.mdi
						opacity .6


		&-secondary-action-title
			color #333
			opacity .6
			margin-right 4px

	&__breadcrumb
		.section__header &
			margin-top 4px
			margin-bottom 4px

	&__title
		color #4d4d4d
		line-height normal

		&--page
			font-size 28px
			font-weight 300

	&__intro
		font-size 13px
		line-height 17px
		color #4d4d4d

		.section__header &
			margin-right 61px
			margin-top 10px
			opacity .6

	&__hr
		border-top 1px solid #e6e6e6

	&__hr
	&__header
	&__toolbar
	&__list
	&__intro
		margin-top 0
		margin-bottom 15px

	.section__header &__hr
	&__hr--header
	.section__header &__toolbar
	.section__header &__header-row
		margin-top 10px
		margin-bottom 10px

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	&__hr--header
		margin-left 20px
		margin-right 15px

	&__hr--header--m-t-1
	.section__header &__hr--m-t-1
		margin-top -4px

	&__img
		display block
		max-width 100%
		height auto

		&-caption
			display block
			font-size 11px
			color #999
			margin-top 5px
			margin-bottom 10px

	&__tags
		font-size 10px
		color #999

		a
			text-decoration none
			color #999

			&:focus
			&:hover
				color #4d4d4d

	&__header--space
		margin-bottom 0

	&--article .section__title
		font-family $font-family-base
		font-weight bold
		font-size 20px
		line-height 1.12
		text-transform none
		letter-spacing normal
		margin-top 0
		margin-bottom 10px

	&--article .section__header
		margin-bottom 10px

	&--article .section__header &__hr
	&--article .section__header &__toolbar
	&--article .section__header &__social
		margin-top 10px
		margin-bottom 10px

		&:first-child
			margin-top 0

	&--article .section__header &__hr
		margin-top 6px

	&--article .section__header &__toolbar
		margin-bottom 13px

	&--article .section__header &__title
		margin-right 61px

	&--article .section__footer &__tags
	&--article .section__footer &__social
	&--article .section__footer &__footer-nav
		margin-top 20px
		margin-bottom 20px

	&--article .section__footer &__footer-nav
		margin-top 30px
		margin-bottom -10px

	&--article .section__header
	&--article .section__body
	&--article .section__footer
		padding-right 15px
		padding-left 20px

	&--article .section__header
		padding-top 10px
		margin-bottom 15px

	&--article .section__footer
		margin-top 15px
		padding-bottom 10px

	&--article .section__img-container
		margin-top 15px
		margin-bottom 15px

	&--article .section__body
		h1, h2, h3, h4, h5, h6
			font-family $font-family-base
			font-weight bold
			line-height 1.12
			text-transform none
			letter-spacing normal
			margin-top 30px
			margin-bottom 15px

			&:first-child
				margin-top 0

		h1
			font-size 20px

		h2
			font-size 18px

		h3
			font-size 16px

		h4
			font-size 14px

		p, ul, ol, blockquote, dl
			font-size 14px
			line-height 18px
			margin-top 15px
			margin-bottom 15px

		blockquote
			margin-top 20px
			margin-bottom 20px

		li
			margin-top 5px
			margin-bottom 5px

		blockquote
			font-size 13px
			font-style italic
			text-align center
			padding-left 30px
			padding-right 30px

			&:before
			&:after
				content ''
				display block
				width 30px
				border-top 1px solid #e6e6e6
				margin 0 auto
				font-size 0

			&:before
				margin-bottom -6px

			&:after
				margin-top 0

		a
			text-decoration none

	&--article .section__body .section__img-container
		margin-left -20px
		margin-right -15px

	&--article .section__body .section__img-caption
		padding-left 20px
		padding-right 15px


	&--article .section__footer-nav
		border-top 1px solid #d2d4d8
		margin-left -20px
		margin-right -15px
		border-bottom 1px solid #d2d4d8

		.btn
			&--prev
				text-align left

			&--next
				text-align right

.section--catalog .section__form .form-control
	+mobile()
		padding-right 10px

.section--catalog .section__form .input-group-postfix--hint
	+mobile()
		display none
