.uk-panel
	display block
	position relative

	&
	&:hover
		text-decoration none

	&:before
	&:after
		content ""
		display table

	&:after
		clear both

	& > :not(.uk-panel-title):last-child
		margin-bottom 0

.uk-panel-title
	margin-top 0
	margin-bottom 15px
	font-size 18px
	line-height 24px
	font-weight normal
	text-transform none
	color #444444

.uk-panel-badge
	position absolute
	top 0
	right 0
	z-index 1

.uk-panel-teaser
	margin-bottom 15px

.uk-panel-body
	padding 15px

.uk-panel-box
	padding 15px
	background #f5f5f5
	color #444444

	&:hover
		color #444444

	& .uk-panel-title
		color #444444

	& .uk-panel-badge
		top 10px
		right 10px

	& > .uk-panel-teaser
		margin-top -15px
		margin-left -15px
		margin-right -15px

	& > .uk-nav-side
		margin: 0 -15px

.uk-panel-box-primary
	background-color #ebf7fd
	color #2d7091

	&-hover:hover
		color #2d7091

	& .uk-panel-title
		color #2d7091

.uk-panel-box-secondary
	background-color #eeeeee
	color #444444

	&-hover:hover
		color #444444

	& .uk-panel-title
		color #444444

.uk-panel-hover
	padding 15px
	color #444444

	&:hover
		background #f5f5f5
		color #444444

	& .uk-panel-badge
		top 10px
		right 10px

	& > .uk-panel-teaser
		margin-top -15px
		margin-left -15px
		margin-right -15px

.uk-panel-header .uk-panel-title
	padding-bottom 10px
	border-bottom 1px solid #dddddd
	color #444444

.uk-panel-space
	padding 30px

	& .uk-panel-badge
		top 30px
		right 30px

.uk-panel-divider
	.uk-panel + &
		margin-top 50px !important

		+above($breakpoint-xl)
			margin-top 70px !important

	.uk-panel + &:before
		content ""
		display block
		position absolute
		top -25px
		left 0
		right 0
		border-top 1px solid #dddddd

		+above($breakpoint-xl)
			top -35px
