.checkbox
	position relative
	input[type=checkbox]
		position absolute
		clip rect(0, 0, 0, 0)

	label
		display inline-block
		margin-left 1.65em
		font-weight normal

	input ~ label:before
		font-family 'Material Design Icons'
		font-size 1.4em
		display block
		position absolute
		left 0
		top -1px

	input ~ label:before
	input ~ label:hover:before
		color $brand-primary
		content '\F12E'
		opacity .6

	input:checked ~ label:before
	input:checked ~ label:hover:before
		content '\F132'
		opacity 1

	input:indeterminate ~ label:before
	input:indeterminate ~ label:hover:before
		content '\F375'
		opacity 1

	input:disabled ~ label:before
	input:disabled ~ label:hover:before
		opacity .6
		color #999

	input:disabled ~ label
		color #999
