.uk-dropdown
.uk-dropdown-blank
	display none
	position absolute
	z-index 1020
	box-sizing border-box
	width 200px

.uk-dropdown
	padding 15px
	background #fff
	color #000
	font-size 1rem
	vertical-align top
	box-shadow 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12)

	&--mega
		background $brand-primary $background-image-pattern 0 0 repeat
		color #fff
		padding-top 38px
		padding-bottom 35px
		padding-left 112px
		padding-right 70px
		width 768px
		box-shadow none

.uk-open > .uk-dropdown
.uk-open > .uk-dropdown-blank
	display block
	-webkit-animation uk-fade 0.2s ease-in-out
	animation uk-fade 0.2s ease-in-out
	-webkit-transform-origin 0 0
	transform-origin 0 0

.uk-dropdown-top
	margin-top -5px

.uk-dropdown-bottom
	margin-top 5px

	.uk-dropdown--mega&
		margin-top 0
		margin-left -100px

.uk-dropdown-left
	margin-left -5px

.uk-dropdown-right
	margin-left 5px

.uk-dropdown .uk-nav
	margin 0 -15px

.uk-dropdown .uk-nav--main
	margin-top -15px
	margin-bottom -15px
	text-align left

.uk-dropdown--mega .uk-nav
	margin-left 0
	margin-right 0

.uk-grid .uk-dropdown-grid + .uk-dropdown-grid
	margin-top 15px

.uk-dropdown-grid > [class*='uk-width-'] > .uk-panel + .uk-panel
	margin-top 15px

+above($breakpoint-md)
	.uk-dropdown:not(.uk-dropdown-stack) > .uk-dropdown-grid
		margin-left -15px
		margin-right -15px

	.uk-dropdown:not(.uk-dropdown-stack) > .uk-dropdown-grid > [class*='uk-width-']
		padding-left 15px
		padding-right 15px

	.uk-dropdown--mega:not(.uk-dropdown-stack) > .uk-dropdown-grid
		margin-left -22px
		margin-right -22px

	.uk-dropdown--mega:not(.uk-dropdown-stack) > .uk-dropdown-grid > [class*='uk-width-']
		padding-left 22px
		padding-right 22px

	.uk-dropdown:not(.uk-dropdown-stack) > .uk-dropdown-grid > [class*='uk-width-']:nth-child(n+2)
		border-left 1px solid #dddddd

	.uk-dropdown--mega:not(.uk-dropdown-stack) > .uk-dropdown-grid > [class*='uk-width-']:nth-child(n+2)
		border-left none

	.uk-dropdown-width-2:not(.uk-dropdown-stack)
		width 400px

	.uk-dropdown-width-3:not(.uk-dropdown-stack)
		width 600px

	.uk-dropdown-width-4:not(.uk-dropdown-stack)
		width 800px

	.uk-dropdown-width-5:not(.uk-dropdown-stack)
		width 1000px

+below($breakpoint-md - 1px)
	.uk-dropdown-grid > [class*='uk-width-']
		width 100%

	.uk-dropdown-grid > [class*='uk-width-']:nth-child(n+2)
		margin-top 15px

.uk-dropdown-stack > .uk-dropdown-grid > [class*='uk-width-']
	width 100%

.uk-dropdown-stack > .uk-dropdown-grid > [class*='uk-width-']:nth-child(n+2)
	margin-top 15px

.uk-dropdown-small
	min-width 150px
	width auto
	padding 5px
	white-space nowrap

	.uk-nav
		margin 0 -5px

.uk-dropdown-navbar
	margin-top 0
	background #f5f5f5
	color #444444

.uk-open
	& > .uk-dropdown-navbar
		-webkit-animation uk-slide-top-fixed 0.2s ease-in-out
		animation uk-slide-top-fixed 0.2s ease-in-out

.uk-dropdown-scrollable
	overflow-y auto
	max-height 200px

.uk-dropdown--share
	padding 8px
	width auto
	white-space nowrap
