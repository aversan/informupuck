.list
	display block
	padding $list-border 0
	list-style none

.list__item
	font-size 12px
	line-height 14px
	display flex
	min-height $list-min-height
	box-sizing border-box
	flex-direction row
	flex-wrap nowrap
	align-items center
	padding $list-min-padding
	cursor default
	color $list-main-text-text-color
	overflow hidden
	position relative

	& .list__item-primary-content
		order 0
		flex-grow 2
		text-decoration none
		box-sizing border-box
		display flex
		align-items center

		& .list__item-icon
			margin-right $list-icon-text-left-distance - $list-icon-size - $list-min-padding

		& .list__item-avatar
			margin-right $list-avatar-text-left-distance - $list-avatar-size - $list-min-padding

	& .list__item-secondary-content
		display flex
		flex-flow column
		align-items flex-end
		margin-left $list-min-padding

		& .list__item-secondary-info
			typo-caption()
			color $list-supporting-text-text-color

		& .list__item-sub-header
			padding 0 0 0 $list-min-padding

.list__item-icon
.list__item-icon.material-icons
	height $list-icon-size
	width $list-icon-size
	font-size $list-icon-size
	box-sizing border-box
	color $list-icon-color

.list__item-avatar
.list__item-avatar.material-icons
	height $list-avatar-size
	width $list-avatar-size
	box-sizing border-box
	border-radius 50%
	background-color $list-icon-color
	font-size $list-avatar-size
	color $list-avatar-color
	background-size cover

.list__item--two-line
	height $list-two-line-height

	& .list__item-primary-content
		height $list-two-line-height - $list-min-padding - $list-bottom-padding
		line-height 14px
		display block

		& .list__item-avatar
			float left

		& .list__item-icon
			float left
			margin-top ($list-two-line-height - $list-min-padding - $list-bottom-padding - $list-icon-size) / 2

		& .list__item-secondary-content
			height $list-two-line-height - $list-min-padding - $list-bottom-padding

		& .list__item-sub-title
			font-size 16px
			line-height 1.5
			color $list-supporting-text-text-color
			display block
			padding 0

.list__item--three-line
	height $list-three-line-height

	& .list__item-primary-content
		height $list-three-line-height - $list-min-padding - $list-bottom-padding
		line-height 14px
		display block

		& .list__item-avatar
		& .list__item-icon
			float left

	& .list__item-secondary-content
		height $list-three-line-height - $list-min-padding - $list-bottom-padding

	& .list__item-text-body
		typo-body()
		font-size 10px
		height $list-three-line-height - $list-min-padding - $list-bottom-padding
		color $list-supporting-text-text-color
		display block
		padding 0

.list__item-title
	.list__item--hoverable:hover &
		text-decoration underline

	&--line-2
		line-height 14px
		display block
		display -webkit-box
		-webkit-box-orient vertical
		overflow hidden
		text-overflow ellipsis
		word-wrap break-word
		max-height 28px
		-webkit-line-clamp 2

.list__item-cover-link
	position absolute
	left 0
	top 0
	right 0
	bottom 0
	z-index 1

.list__item-title-left
	float left
	padding-right 10px
	font-weight normal
	color #666
	display inline-block
	box-sizing border-box
	font-size 11px

	.list--title-left-width-1 &
		width 90px
		min-width 90px

	.list--title-left-width-2 &
		width 140px
		min-width 140px

.list__item--hoverable:hover
	background-color $background-color-base-hover
	color #fff

	.list__item-text-body
		color #aebfd3

.list--title-left
	padding 0
	margin-top 10px
	margin-bottom 10px

	.list__item
		align-items flex-start
		min-height auto
		padding 0
		margin-top 5px
		margin-bottom 5px

	.list__item-primary-content
		align-items flex-start

	.list__item-text-body
		font-size 13px
		line-height 17px
		color inherit

		&--line-3
			line-height 17px
			display block
			display -webkit-box
			-webkit-box-orient vertical
			overflow hidden
			text-overflow ellipsis
			word-wrap break-word
			max-height 51px
			-webkit-line-clamp 3

	.list__item-title-left
		line-height 17px

	.list__item-section-action
		font-size 11px

.list--chip
	.list__item-title-left
		line-height 29px

.list--employees
	.list__item
		align-items flex-start
		padding-left 20px
		padding-right 24px

	.list__item + .list__item
		margin-top 3px

	.list__item-secondary-content
		margin-left 10px

.list--products
	.list__item
		padding-left 20px
		padding-right 24px

	.list__item-avatar
		border-radius 0
		width 45px
		height 45px

	.list__item-price
		font-family 'GothamPro', Arial, sans-serif
		font-weight bold
		font-size 12px
		color #4d739f
		padding 0
		display block
		white-space nowrap
		margin-top 3px

	.list__item--hoverable:hover .list__item-price
		color #aebfd3

	.list__item + .list__item
		margin-top 5px

	.list__item-secondary-content
		margin-left 10px

.list--index
	.list__item
		font-size 11px
		align-items flex-start
		min-height 38px
		padding-top 3px
		padding-bottom 3px
		padding-left 12px
		padding-right 12px
		border-left 12px solid #fff
		border-right 12px solid #fff
		background-color #f5f5f5
		line-height 17px

		&:nth-child(2n)
			background-color #fff

		&--hoverable:hover
			background-color $background-color-base-hover
			border-color $background-color-base-hover
			color #fff

	.list__item-title
		line-height 17px
		max-width 160px

		&--line-2
			line-height 17px
			max-height 34px

	.list__item + .list__item
		margin-top 3px

	.list__item-secondary-content
		margin-left 10px

	.list__item-secondary-num
		padding-left 14px
		position relative

		&:before
			content ''
			width 0
			height 0
			position absolute
			left 0
			top 3px
			margin-top .3em

		&.up:before
			border-style solid
			border-width 0 3.5px 5px 3.5px
			border-color transparent transparent #8cc63f transparent

		&.down:before
			width 0
			height 0
			border-style solid
			border-width 5px 3.5px 0 3.5px
			border-color #ed1c24 transparent transparent transparent

		.percent
			display block
			line-height 1.25

		&.up .percent
			color #8cc63f

		&.down .percent
			color #ed1c24

.panel__list
	margin-top 0
	margin-bottom 0
	padding-top 0
	padding-bottom 0

	.list__item
		margin-top 2px
		margin-bottom 2px

.list__item--phone
	.phone1
		display inline

	.phone2
		display none

	.typography--subhead
		display none

	&.is-show
		.phone1
			display none

		.phone2
			display inline

		.typography--subhead
			display inline

		.list__item-section-action
			display none

.list--square
	.list__item
		&:before
			content ''
			display block
			width 4px
			height 4px
			background-color #858585
			margin-left 10px
			margin-right 10px
			margin-top .45em
			border-radius 1px
