// Clear the float on any element.
clearfix()
	&:after
		display table
		clear both
		content ''

// Fix no working `-webkit-text-size-adjust: 100%;` in Android.
fix-text-size-adjust()
	background-image linear-gradient(transparent, transparent)

// Set element size
size($width, $height = $width)
	width $width
	height $height

// Set margin on left & right
margin-x($margin)
	margin-left $margin
	margin-right $margin

// Set margin on top & bottom
margin-y($margin)
	margin-top $margin
	margin-bottom $margin

// Set pading on left & right
padding-x($padding)
	padding-left $padding
	padding-right $padding

// Set padding on top & bottom
padding-y($padding)
	padding-top $padding
	padding-bottom $padding

// Set one static retina image
retinaBackground($image, $ext = 'png')
	background-image url('../images/' + $image + '.' + $ext)

	@media (-webkit-min-device-pixel-ratio 2), (min-resolution 192dpi)
		background-image url('../images/' + $image + '@2x.' + $ext)

listReset()
	list-style none
	font-size 100%
	line-height normal
	margin 0
	padding 0

animation(x)
	-webkit-animation x
	-moz-animation x
	-ms-animation x
	-o-animation x
	animation x

linearGradient(start, end)
	background start
	background linear-gradient(to bottom, start 0%, end 100%)
	background -webkit-linear-gradient(top, start 0%, end 100%)
	background -o-linear-gradient(top, start 0%, end 100%)
	background -moz-linear-gradient(top, start 0%, end 100%)
	background -ms-linear-gradient(top, start 0%, end 100%)
