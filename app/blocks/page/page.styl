html
body
	width 100%
	height 100%


// page

.page
	margin 0 auto
	max-width 1024px
	width 100%
	height 100%
	background #fff
	position relative
	min-width 320px

	div&
		overflow hidden
		min-height 100%
		height auto

	+below(767px)
		width 100%
		max-width 510px
		margin-left auto
		margin-right auto


// page-top

.page-top
	width 100%
	height 28px
	background $brand-primary


// page-left

.page-left
	background #fff
	width 768px
	height 100%
	display table-cell
	vertical-align top
	background #303948

	+below(767px)
		width 100%
		max-width 510px
		display table


// page-right

.page-right
	background #303948
	max-width 256px
	width 100%
	height 100%
	display table-cell
	vertical-align top
	width 256px
	position relative

	+below(767px)
		width $page-side-width
		max-width 100%
		display block
		position fixed
		right 0
		top 0
		left auto
		box-sizing border-box
		transform translateX(100%)
		transform-style preserve-3d
		will-change transform
		transition-property transform
		transition-duration .2s
		transition-timing-function $animation-curve-default
		z-index 2001
		height 100%
		max-height 100%

	+from-width(768px)
		transform translateX(0) !important

	&.is-visible
		+below(767px)
			transform translateX(0)

	.catalog-col-box
		+below(767px)
			overflow-y auto
			-webkit-overflow-scrolling touch
			-ms-scroll-chaining none
			position absolute
			left 0
			right 0
			bottom 0
			top 100px

	.page--layout-main &
	.page--layout-main & > #scroll_block_jquery
		max-height 1210px

		+below(767px)
			height 100%
			max-height 100%

	.page--layout-main & > #scroll_block_jquery
		overflow hidden

		+below(767px)
			overflow visible

.page-right__toggle
	position absolute
	right 100%
	top 0
	height 100%
	border-right 5px solid $brand-primary
	z-index 1
	display none
	width 25px
	box-sizing border-box

	+below(767px)
		display block

	&:before
		box-shadow 0 0 20px rgba(0,0,0,0.3)
		position absolute
		content ''
		display block
		right 0
		top 0
		bottom 0
		z-index -1
		width 0

	&-icon
		font-family 'Material Design Icons'
		font-size 18px
		width 20px
		height 55px
		line-height 55px
		text-align center
		background-color $brand-primary
		color #fff
		position relative
		top 50%
		margin-top -28px
		display block
		cursor pointer

		&:before
			content "\F141"

			.page-right.is-visible &
				content "\F142"

.page-right__tint
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	background-color alpha(#000, .1)
	transition-property transform
	transition-duration .2s
	transition-timing-function $animation-curve-default
	display none
	opacity 0
	z-index 2000

	+below(767px)
		.page-right.is-visible ~ &
			display block
			opacity 1


