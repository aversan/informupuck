.form__container
	display block
	width 100%

	&-inner
		max-width 570px
		margin-left auto
		margin-right auto
		padding-left 30px
		padding-right 30px
		padding-top 30px
		padding-bottom 30px
		box-sizing border-box

		+below(767px)
			max-width 100%
			width 100%

.form__tab
	display none
	width 100%

	+below(767px)
		display none

	&--inverse
		backgroun-color $brand-primary

	&.is-active
		display block

	&--height-viewport
		height 100vh
		min-height 760px

		+below(767px)
			height auto
			min-height 100%

		+below(767px)
			height auto

	&--center
		align-items center
		justify-content center

		&.is-active
			display flex

			+below(767px)
				display block

.form__header
	text-align center

.form__header-logo
	display block
	margin 0 auto 30px

.form__header-title
	font-family $font-family-sans-serif
	font-size 35px
	font-weight 300
	color #333
	margin-top 25px
	margin-bottom 25px

	&:first-child
		margin-top 0

.form__sep
	border-top 1px solid #e6e6e6
	opacity .6
	display block
	margin-left auto
	margin-right auto
	margin-top 20px
	margin-bottom 20px

	&--small
		width 60px

	.form__form-group--footer .form__sep
		margin-top 40px

.form__form-group
	margin-bottom 20px

	&:last-child
		margin-bottom 0

	.control-label
		font-size 12px
		display block
		color #333
		opacity .6
		margin 0 0 7px 0
		text-align left

	&--footer
		margin-top 45px
		margin-bottom 45px
		text-align center

		.btn-block
			margin-left auto
			margin-right auto

.form__footer-link
	color $link-color
	text-decoration none

	&:focus
	&:hover
		color $link-hover-color

.form__social-btn
	height 30px
	line-height 30px
	padding 0 15px
	display inline-block
	vertical-align top
	border-radius 3px
	margin-left 4px
	margin-right 4px
	width 80px
	white-space nowrap
	position relative

	.mdi
		font-size 20px
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)

	.mdi-vk
		font-size 30px

	&--vkontakte
		background-color #4d75a3
		color #fff

		&:focus
		&:hover
			background-color darken(#4d75a3, 30%)
			color #fff

	&--facebook
		background-color #3b5998
		color #fff

		&:focus
		&:hover
			background-color darken(#3b5998, 30%)
			color #fff

	&--google
		background-color #d03324
		color #fff

		&:focus
		&:hover
			background-color darken(#d03324, 30%)
			color #fff

	&-container
		white-space nowrap
		text-align center
		margin-top 17px
		margin-bottom 17px

.form__hint-block
	display block
	margin-top 20px
	margin-bottom 20px
	font-size 12px
	display block
	color #333
	opacity .6
	position relative

	& > .icon
		position absolute
		right 100%
		margin-right 5px

	&--alt
		overflow hidden
		text-align center
		white-space nowrap
		margin-top 40px
		margin-bottom 12px

		&:before
		&:after
			width 100%
			display inline-block
			vertical-align middle
			content ''
			border-top 1px solid #e6e6e6
			opacity .6

		&:before
			margin-left -100%
			margin-right 1em

		&:after
			margin-right -100%
			margin-left 1em

		span
			display inline-block
			white-space normal

.form__btn-width-1
	max-width 250px

	+below(767px)
		width 100%
		max-width 100%

.form__btn-width-2
	max-width 400px

	+below(767px)
		width 100%
		max-width 100%

.form__layout-login-register
	position absolute
	top 78px
	left 100px
	width 410px
	min-height 507px
	z-index 1111

	+below(767px)
		top 88px
		left 0
		right 0
		width auto

	.form__tab
		background-color #fff
		background-position 0 0
		background-repeat repeat
		background-image $background-image-pattern
		min-height 507px
