.pagination
	display inline-block
	padding-left 0
	box-sizing border-box

	& > li
		display inline

	& > li > a
	& > li > span
		box-sizing border-box
		position relative
		float left
		margin-left -1px
		text-decoration none
		border 1px solid transparent

	& > li:first-child > a
	& > li:first-child > span
		margin-left 0

	& > .active > a
	& > .active > span
	& > .active > a:hover
	& > .active > span:hover
	& > .active > a:focus
	& > .active > span:focus
		z-index 2
		cursor default

	& > .disabled > span
	& > .disabled > span:hover
	& > .disabled > span:focus
	& > .disabled > a
	& > .disabled > a:hover
	& > .disabled > a:focus
		cursor not-allowed


// Theme

.pagination
	margin 0
	border-radius 0
	box-sizing border-box
	display flex
	align-items center

	& > li > a
	& > li > span
		padding 0
		color $brand-primary
		background-color transparent
		border-color transparent
		width 26px
		height 26px
		line-height 24px
		text-align center
		border-radius 100px
		margin 10px
		font-size 11px
		box-sizing border-box

	& > li > a:hover
	& > li > a:focus
	& > li > span:hover
	& > li > span:focus
		color #fff
		background-color lighten($brand-primary, 10%)
		border-color lighten($brand-primary, 10%)

	& > .active > a
	& > .active > a:hover
	& > .active > a:focus
	& > .active > span
	& > .active > span:hover
	& > .active > span:focus
		color #ffffff !important
		background-color $brand-primary
		border-color $brand-primary

	& > .disabled > a
	& > .disabled > a:hover
	& > .disabled > a:focus
	& > .disabled > span
	& > .disabled > span:hover
	& > .disabled > span:focus
		color #adadad
		background-color #f9fafb
		border-color #f9fafb

	&__spacer
		flex-grow 1


.pagination--helper
	margin-left -10px
